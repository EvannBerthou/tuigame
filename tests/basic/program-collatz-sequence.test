FUNC STEP(n);
    IF MOD(n 2) == 0;
        RETURN n / 2;
    ELSE;
        RETURN (n * 3) + 1;
    END
END

FUNC COLLATZ(n);
    steps = 0;
    WHILE n > 1;
        n = STEP(n);
        steps = steps + 1;
    END
    RETURN steps;
END

FOR k IN 0..11;
    PRINT(k);
    PRINT(" ");
    PRINTN(COLLATZ(k));
END

